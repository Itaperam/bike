<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/cadastro.css">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro</title>
</head>
<body>
    {{#each erros}}
        <div class="erro">{{texto}}</div>
    {{else}}

    {{/each}}
    <div class="login-box">
        <h1>Insira seus dados</h1>
            <form action="/usuario/cadastrado" method="POST">
                <!--Nome-->
                <div class="textbox">
                <input type="text" id="nome" name="nome" placeholder="Nome" class="form-control">
                </div>
                <!--Sobrenome-->
                <div class="textbox">
                <input type="text" id="sobrenome" name="sobrenome" placeholder="Sobrenome" class="form-control">
                </div>
                <!--E-mail-->
                <div class="textbox">
                <input type="text" id="email" name="email" placeholder="E-mail" class="form-control">
                </div>
                <!--Data de Nascimento-->
                <div class="date">
                <input type="date" id="data_nascimento" name="data_nascimento" placeholder="Data de nascimento" class="form-control">
                </div>
                <!--Gênero-->
                <div class="textbox">
                <input type="text" id="genero" name="genero" placeholder="Gênero" class="form-control">
                </div>
                <!--CPF-->
                <div class="textbox">
                <input type="text" id="cpf" name="cpf" placeholder="CPF" class="form-control">
                </div>
                <!--Celular-->
                <div class="textbox">
                <input type="text" id="celular" name="celular" placeholder="Cel" class="form-control">
                </div>
                <!--Endereço-->
                <div class="textbox">
                <input type="text" id="endereco" name="endereco" placeholder="Endereço" class="form-control">
                </div>
                <!--Cidade-->
                <div class="textbox">
                <input type="text" id="cidade" name="cidade" placeholder="Cidade" class="form-control">
                </div>
                <!--Senha-->
                <div class="textbox">
                <input type="text" id="senha" name="senha" placeholder="Senha" class="form-control">
                </div>
                <!--Senha Repitida-->
                <div class="textbox">
                <input type="text" id="rsenha" name="rsenha" placeholder="Repita a senha" class="form-control">   
                </div>
                <button class="btn" type="submit">Cadastrar</button>     
            </form>
    </div>
</body>
</html>